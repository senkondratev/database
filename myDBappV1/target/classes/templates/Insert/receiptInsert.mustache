<!DOCTYPE html>
<html>
<head>
    <title>please work</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
</head>
<body>
<script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
<script type="text/javascript">$(document).on("change", "#guestSelect", function () {
    var selected = $(this).val();
    $.get("/insert/receiptInsertSupportController",
            {
                selectedGuestId : selected
            }, function(html){
                jQuery('#serviceSelect').html(html);
            });
})
</script>
<div>
    <form action="/insert/receipt" method="post">
        <select name="guestId" id="guestSelect">
            <option disabled selected>Choose guest</option>
            {{#guests}}
                <option value={{guestId}}>{{guestId}} {{ClientSurname}}</option>
            {{/guests}}
        </select>
        <select name="serviceId" id="serviceSelect">
            {{#services}}
                <option value={{serviceId}}>{{serviceId}} {{serviceName}}</option>
            {{/services}}
        </select>
        <button type="submit">ok</button>
    </form>
</div>
<div>
    These are out receipts
</div>
{{#receipts}}
    {{receiptId}}
    {{serviceName}}
    <br>
{{/receipts}}
</body>
</html>